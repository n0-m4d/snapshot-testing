{
    "name": "kigaroo/snapshot-testing",
    "description": "Provides PHPUnit assertions for snapshot testing",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    },
    "autoload": {
        "psr-4": {
            "KigaRoo\\SnapshotTesting\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": ["tests/unit"] }
    },
    "require": {
        "php": ">=8.2",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-simplexml": "*",
        "symfony/filesystem": "~2.8|~3.0|~4.0|~5.0|^7.1",
        "symfony/property-access": "~2.8|~3.0|~4.0|~5.0|^7.1",
        "webmozart/assert": "~1.2"
    },
    "require-dev": {
        "doctrine/coding-standard": "~6.0|~8.0",
        "phpunit/phpunit": "^9.6"
    }
}
